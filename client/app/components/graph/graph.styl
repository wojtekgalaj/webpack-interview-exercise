.general-graph-comparison
  background #f4
  padding 5px

.graph-with-legend
  background #df
  display flex
  .graph
    position relative
    padding 20px 0
    width 70%
    i
      position absolute
      top 10px
      right 10px
  .legend
    display flex
    flex-direction column-reverse
    background black
    width 30%
    .panel
      background white
      margin 10px
      border-radius 3px
      ul
        list-style none
        padding 0 10px
        li
          display flex

.legend-color
  &::before
    content ' '
    display inline-block
    width 13px
    height 13px
    margin-right 5px
    background black
  &.reference::before
    background red
  &.area1::before
    background green
  &.area2::before
    background blue
