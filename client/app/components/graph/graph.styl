@import "../../common/common"

.general-graph-comparison
  background $background
  padding 5px

.graph-with-legend
  background #df
  display flex
  .graph
    position relative
    padding 20px 0
    width 70%
    i
      position absolute
      top 10px
      right 10px
  .legend
    display flex
    flex-direction column-reverse
    background #007db0
    width 30%
    .panel
      background white
      margin 10px
      border-radius 3px
      ul
        list-style none
        padding 0 10px
        li
          display flex
          margin-top 5px

.legend-color
  &::before
    content ' '
    display inline-block
    width 13px
    height 13px
    margin-right 5px
    background black
  &.reference::before
    background $reference
  &.area1::before
    background $compared1
  &.area2::before
    background $compared2

@media screen and (max-width: 900px)
  .graph-with-legend
    flex-direction column
    .legend
      width 100%
    .graph
      width 100%
